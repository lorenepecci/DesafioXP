        "nome": {
          "type": "string"
        },
        "senha": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "saldo": {
          "type": "number"
        }
      },
      "example": {
        "codCliente": 1,
        "nome": "fulano1",
        "senha": "$2a$08$486LWDJyZqEznxkr95SeHeczCck2/MBiAl2rWYoeBPmx1/Lj94idS",
