            }
          },
          {
            "name": "codCliente",
            "in": "query",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    { "$ref": "#/definitions/ativo" },
                    { "$ref": "#/definitions/carteira" }
